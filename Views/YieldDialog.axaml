<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MUNManager.Views.YieldDialog"
        Title="MUNManager | Yielding" MaxWidth="300" MinWidth="300" MaxHeight="75" MinHeight="75">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                        <TextBlock Classes="SubTitle">Yield remaining Time</TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Click="NextSpeaker_Click">Next Speaker</Button>
                                <Button Click="Chair_Click">Chair</Button>
                                <Button Click="Cancel_Click">Cancel</Button>
                        </StackPanel>
                </StackPanel>
        </Grid>
</Window>
