<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="300" Height="75"
        x:Class="MUNManager.Views.Setup.SaveDialog"
        Title="Save Configuration">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Would you like to save this configuration?</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5 0 0">
                <Button Margin="0 0 2 0" Click="Save_Click">Yes</Button>
                <Button Click="ContinueVolatile" Margin="2 0 0 0">No</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>